<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualPetAxolotl.Dashboard"
             BackgroundImageSource="Dashboard" >


    <StackLayout >

        <Button Text="my Axolotl"
                x:Name="axolotlNameButton">
        </Button>
        <Label x:Name="levelLabel" 
            Text="Level 1"
              TextColor="White" ></Label>

        <Label x:Name="xpLabel"
            Text="1000xp"
               TextColor="White"></Label>
        
        <Image x:Name="axolotlImage"
               Source="AxolotlCharacter"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               HeightRequest="360"
               ></Image>


        <ImageButton x:Name="feedIcon"
                     Source="FeedIcon"
                     BackgroundColor="Transparent"
                     HeightRequest="100"
                     Margin="20" 
                     Clicked="feedAxolotlTapped"
                     >
        </ImageButton>


    </StackLayout>
    
    
    
</ContentPage>