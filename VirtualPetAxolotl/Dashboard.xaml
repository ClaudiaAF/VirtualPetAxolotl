<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualPetAxolotl.Dashboard"
             BackgroundImageSource="Dashboard" >


    <StackLayout >

        <Button Text="my Axolotl"
                x:Name="axolotlNameButton" 
                BackgroundColor="Transparent"
                TextColor="White"
                >
            
        </Button>
        <Label x:Name="levelLabel" 
            Text="Level 1"
              TextColor="White" 
               HorizontalTextAlignment="Center"
               Margin="10"></Label>

        <Label x:Name="xpLabel"
            Text="1000xp"
               TextColor="White"
               HorizontalTextAlignment="Center"></Label>
        
        <Image x:Name="axolotlImage"
               Source="Axolotl_nothealthy_1"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               HeightRequest="360">
            
            <Image.GestureRecognizers>
                <TapGestureRecognizer
                Tapped="OnTapGestureRecognizerTapped"
                NumberOfTapsRequired="2" 
                />
            </Image.GestureRecognizers>
        </Image>

        <FlexLayout AlignItems="Center">
        <ImageButton x:Name="feedIcon"
                     Source="feed_icon"
                     BackgroundColor="Transparent"
                     HeightRequest="100"
                     Margin="20" 
                     Clicked="feedAxolotlTapped"
                     >
        </ImageButton>
            <ImageButton 
                     Source="clean_icon"
                     BackgroundColor="Transparent"
                     HeightRequest="100"
                     Margin="20" >
            </ImageButton>

            <ImageButton 
                     Source="filter_icon"
                     BackgroundColor="Transparent"
                     HeightRequest="100"
                     Margin="20" 
                     >
            </ImageButton>
        </FlexLayout>

    </StackLayout>
    
    
    
</ContentPage>