<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualPetAxolotl.EnterNamePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" Spacing="50" Margin="30, 84, 30, 0">
            <Label Text="Edit Axolotl Name"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   TextColor="DarkBlue"
                   FontAttributes="Bold"
                   FontSize="30"></Label>
            <Entry Text="" Placeholder="My Axolotl Name"></Entry>
            <Button Text="Save"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    TextColor="DarkGoldenrod"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>