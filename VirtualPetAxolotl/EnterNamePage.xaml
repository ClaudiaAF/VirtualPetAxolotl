<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualPetAxolotl.EnterNamePage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             BackgroundImage="NamePage">
    
    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" Spacing="50" Margin="30, 84, 30, 0">


            <Frame BackgroundColor="Transparent"
                   OutlineColor="#317777"
                   CornerRadius="5">

                <Entry x:Name="AxolotlNameInput"
                   Text="" 
                   Placeholder="My Axolotl Name" 
                   PlaceholderColor="White" 
                   BackgroundColor="Transparent"
                   TextColor="White"
                   />

            </Frame>
            <Button Text="Save"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="#317777"
                    Clicked="SaveAxolotlName"
                    xct:TouchEffect.AnimationDuration="250"
                     xct:TouchEffect.PressedScale="0.75"
                     xct:TouchEffect.PressedOpacity="0.6"></Button>

        </StackLayout>
    </StackLayout>
</ContentPage>