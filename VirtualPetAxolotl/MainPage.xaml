<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtualPetAxolotl.MainPage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             BackgroundImage="BackgroundImage">

    <StackLayout>

        <StackLayout VerticalOptions="CenterAndExpand" Spacing="50" Margin="30, 84, 30, 0">
           
            <Button Text="Meet your new pet"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    TextColor="#498D88"
                    FontSize="18"
                    Padding="20"
                    FontAttributes="Bold"
                    BackgroundColor="#ffff"
                    Clicked="MeetPetClicked"
                    xct:TouchEffect.AnimationDuration="250"
                     xct:TouchEffect.PressedScale="0.75"
                     xct:TouchEffect.PressedOpacity="0.6">
                
            </Button>

        </StackLayout>
    </StackLayout>

</ContentPage>
